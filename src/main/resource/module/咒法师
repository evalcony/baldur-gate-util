// 艾德温-咒法师脚本

// 4级召唤-蜘蛛海
if (@key(q)) {
    #100
    loop(i,1,5){
        @RFS(@m,@蜘蛛)
    }
    @RFS(@m,@加速)
}

// 5级召唤骷髅海
if (@key(x)) {
    #100
    loop(i,1,5){
        @RFS(@m,@骷髅战士)
    }
    @RFS(@m,@加速)
}

// 7级召唤
if (@key(w)) {
    #100
    @RFS(@m,@火巨灵)
    @RFS(@m,@哈克沙)
    @RFS(@m,@风巨灵)
    @RFS(@m,@翼龙)
    @RFS(@m,@翼龙)
}

// 8级召唤-狂魔
if (@key(t)) {
    #100
    loop(i,1,5){
        @RFS(@m,@狂魔)
    }
    @RFS(@m,@防邪恶)
}

// 9级召唤-神侍
if (@key(u)) {
    #100
    @RFS(@m,@神侍)
}