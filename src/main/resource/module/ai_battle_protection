// 补防魔武
if (@看见敌人 && $无防魔武(@m) && have(@防魔武)) {
    #100
    @RFS(@m, @防魔武)
}

~破沉默

// 补石皮或拉开距离
if (@看见敌人 && $range(@1NOM,6) && $无石皮(@m) && have(@石皮)) {
    #100
    @RFS(@m,@石皮)
}
if (@看见敌人 && $range(@1NOM,6) && $无石皮(@m) && !have(@石皮)) {
    #100
    $run(@1NOM,90)
}

if (@看见敌人 && $无镜影(@m) && have(@镜影)) {
    #100
    @RFS(@m, @镜影)
}