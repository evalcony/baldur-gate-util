// 一键执行若干操作

// 骷髅海+魔邓肯
if(@key(x)){
    #100
    @RFS(@m,@魔邓肯)
    loop(i,1,4){
        @RFS(@m,@骷髅战士)
    }
    @RFS(@m,@加速)
}

// 一键上防护
if (@key(z)) {
    #100
