    @RFS(@m,@法免改变)
    @RFS(@m,@法免防护)
    @RFS(@m,@法免死灵)
    @RFS(@m,@法免附魔)
    @RFS(@m,@法免塑能)
    @RFS(@m,@防魔武)
    @RFS(@m,@防普通远程)
    @RFS(@m,@防能量)
}

// 法术免疫
if (@key(o)) {
    #100
