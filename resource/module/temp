



// 真视破幻影

loop(i,1,4){
    if (OR($cast(@<i>NOT([0.0.0.MAGE_ALL]),@误导) || $cast(@<i>NOT([0.0.0.MAGE_ALL]),@暗影门) || $cast(@<i>NOT([0.0.0.MAGE_ALL]),@投影) || $cast(@<i>NOT([0.0.0.MAGE_ALL]),@隐形术) ||  $cast(@<i>NOT([0.0.0.MAGE_ALL]),@高隐) || $cast(@<i>NOT([0.0.0.MAGE_ALL]),@拟象) || $cast(@<i>NOT([0.0.0.MAGE_ALL]),@镜影))) {
        #100
        lock{
            @S(@m, @真视)
            $timer("true_visual",FIVE_ROUNDS)
        }
    }
}